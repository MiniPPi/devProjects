<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberMapper">

	<!--로그인  -->
	<select id="login" resultType = "MemberVo">
		 SELECT *
		  FROM MEMBER
		  WHERE ID = #{id}
		  AND EMAIL_AUTH='1'
	
	</select>
	
	<!--회원가입  -->
	<insert id="join">
	INSERT INTO MEMBER(NO,ID,PWD,PHONE,NICK,TECH_STACK_NO)
	VALUES(SEQ_MEMBER_NO.NEXTVAL,#{id},#{pwd},#{phone},#{nick},#{teckStackNo})
	
	</insert>
	
	<!--닉네임 중복 체크  -->
	<select id="nickCheck" resultType = "Int">
		 SELECT COUNT(*)
		 FROM MEMBER
		 WHERE NICK = #{nick}
		 <if test="no != null and no != ''">
		    AND NO NOT IN(#{no})
		</if>
	</select>
	
	<!--이메일 중복 체크  -->
	<select id="emailCheck" resultType = "Int">
		 SELECT COUNT(*)
		 FROM MEMBER
		 WHERE ID = #{id}
		<if test="no != null and no != ''">
		    AND NO NOT IN(#{no})
		</if>
		
	</select>
	
	
	<!--메일 인증  -->
	<update id="updateEmailAuth">
		UPDATE MEMBER 
		SET EMAIL_AUTH='1'
		WHERE ID=#{email}
	</update>
	
	
	
	<!--아이디 찾기  -->
	<select id="findId" resultType = "MemberVo">
		 SELECT *
		  FROM MEMBER
		  WHERE PHONE = #{phone}
	</select>
	
	<!--비밀번호 찾기  -->
	<select id="findPwd" resultType = "MemberVo">
		 SELECT *
		  FROM MEMBER
		  WHERE ID = #{id}
	</select>
	
	
	<!--탈퇴  -->
	<update id="memberDeletePwd">
		UPDATE MEMBER 
		SET QUIT_YN='Y'
		WHERE ID=#{id}
	</update>
	
	<!--계정정보 닉네임,소개,프로필사진 수정  -->
	<update id="mypageEdiProfile">
		UPDATE MEMBER 
		SET NICK=#{nick},
			INTRO=#{intro},
			IMG_PATH=#{imgPath}
		WHERE NO=#{no}
	</update>
	
	<!--계정정보 이메일 수정  -->
	<update id="mypageEditEmail">
		UPDATE MEMBER 
		SET ID=#{id}
		WHERE NO=#{no}
	</update>

</mapper>