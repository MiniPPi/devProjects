<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberMapper">

	<!--로그인  -->
	<select id="login" resultType = "MemberVo">
		 SELECT *
		  FROM MEMBER
		  WHERE ID = #{id}
	
	</select>
	
	<!--회원가입  -->
	<insert id="join">
	INSERT INTO MEMBER(NO,ID,PWD,PHONE,NICK,TECH_STACK_NO)
	VALUES(SEQ_MEMBER_NO.NEXTVAL,#{id},#{pwd},#{phone},#{nick},#{teckStackNo})
	
	</insert>
	
	<!--닉네임 중복 체크  -->
	<select id="nickCheck" resultType = "Int">
		 SELECT COUNT(*)
		  FROM MEMBER
		  WHERE NICK = #{nick}
	
	</select>
	
	<!--아이디 찾기  -->
	<select id="findId" resultType = "MemberVo">
		 SELECT *
		  FROM MEMBER
		  WHERE PHONE = #{phone}
	</select>
	
	<!--비밀번호 찾기  -->
	<select id="findPwd" resultType = "MemberVo">
		 SELECT *
		  FROM MEMBER
		  WHERE ID = #{ID}
	</select>

</mapper>